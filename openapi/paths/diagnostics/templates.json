{
  "/diagnostics/templates": {
    "get": {
      "summary": "List diagnostic templates",
      "description": "Lists diagnostic templates filtered by grade/subject.",
      "tags": [
        "Diagnostics"
      ],
      "parameters": [
        {
          "name": "grade_level",
          "in": "query",
          "schema": {
            "type": "integer"
          }
        },
        {
          "name": "subject",
          "in": "query",
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Templates list",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "../../schemas/diagnostics/DiagnosticTemplate.json"
                }
              }
            }
          }
        }
      }
    }
  }
}
