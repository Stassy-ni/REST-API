{
  "post": {
    "summary": "Register new user",
    "description": "Creates a new user account.",
    "tags": [
      "Auth"
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "format": "email",
                "description": "User's email address",
                "example": "user@example.com"
              },
              "password": {
                "type": "string",
                "format": "password",
                "description": "Password",
                "example": "MySecret123"
              },
              "full_name": {
                "type": "string",
                "description": "Full name",
                "example": "\u0418\u0432\u0430\u043d \u0418\u0432\u0430\u043d\u043e\u0432"
              }
            },
            "required": [
              "email",
              "password"
            ]
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "User created",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/auth/User.json"
            }
          }
        }
      },
      "400": {
        "description": "Invalid input",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/shared/ErrorResponse.json"
            }
          }
        }
      }
    }
  }
}
