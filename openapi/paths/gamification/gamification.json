{
  "get": {
    "summary": "Get user gamification stats",
    "description": "Returns XP, rank, and badges for the current user.",
    "tags": [
      "Gamification"
    ],
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "responses": {
      "200": {
        "description": "Gamification data",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "experience": {
                  "$ref": "../../schemas/gamification/ExperiencePoint.json"
                },
                "rank": {
                  "$ref": "../../schemas/gamification/Rank.json"
                },
                "badges": {
                  "type": "array",
                  "items": {
                    "$ref": "../../schemas/gamification/Badge.json"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
