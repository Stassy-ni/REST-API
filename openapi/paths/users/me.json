{
  "/users/me": {
    "get": {
      "summary": "Get current user's profile",
      "description": "Returns extended profile info for authenticated user.",
      "tags": [
        "Users"
      ],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "Profile info",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../schemas/auth/User.json"
              }
            }
          }
        },
        "401": {
          "description": "Authentication required",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../schemas/shared/ErrorResponse.json"
              }
            }
          }
        }
      }
    }
  }
}
