{
  "/tasks": {
    "post": {
      "summary": "Add task to card",
      "description": "Adds a task to an existing task card.",
      "tags": [
        "Tasks"
      ],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/tasks/Task.json"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Task added",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../../schemas/tasks/Task.json"
              }
            }
          }
        }
      }
    }
  }
}
