{
  "type": "object",
  "description": "Specific educational topic under a section with detailed description and grade level.\n",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique ID of the topic.",
      "example": 401
    },
    "section_id": {
      "type": "integer",
      "description": "ID of the parent section.",
      "example": 301
    },
    "title": {
      "type": "string",
      "description": "Name of the topic.",
      "example": "\u0421\u043b\u043e\u0436\u0435\u043d\u0438\u0435 \u0434\u0440\u043e\u0431\u0435\u0439"
    },
    "description": {
      "type": "string",
      "description": "Description of what the topic covers.",
      "example": "\u041e\u0431\u0443\u0447\u0435\u043d\u0438\u0435 \u0441\u043b\u043e\u0436\u0435\u043d\u0438\u044e \u0434\u0440\u043e\u0431\u0435\u0439 \u0441 \u0440\u0430\u0437\u043d\u044b\u043c\u0438 \u0437\u043d\u0430\u043c\u0435\u043d\u0430\u0442\u0435\u043b\u044f\u043c\u0438."
    },
    "grade_level": {
      "type": "integer",
      "description": "Grade level for which the topic is designed.",
      "example": 5
    }
  },
  "required": [
    "id",
    "section_id",
    "title",
    "grade_level"
  ]
}
