{
  "AccessRequest": {
    "type": "object",
    "description": "Represents a user's request for elevated access (e.g., to become a teacher or expert).\n",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Unique ID of the request.",
        "example": 1201
      },
      "user_id": {
        "type": "integer",
        "description": "ID of the user submitting the request.",
        "example": 1001
      },
      "requested_role": {
        "type": "string",
        "description": "Role being requested (e.g., \"expert\").",
        "example": "expert"
      },
      "status": {
        "type": "string",
        "enum": [
          "pending",
          "approved",
          "rejected"
        ],
        "description": "Status of the request.",
        "example": "pending"
      },
      "created_at": {
        "type": "string",
        "format": "date-time",
        "description": "Date when the request was made.",
        "example": "2025-06-10T09:00:00Z"
      }
    },
    "required": [
      "id",
      "user_id",
      "requested_role",
      "status",
      "created_at"
    ]
  }
}
